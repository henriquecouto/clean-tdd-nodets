{
  "name": "clean-tdd-nodets",
  "version": "1.0.0",
  "description": "Project to learn Clean Architecture and TDD using Node and Typescript",
  "main": "dist/src/main/index.ts",
  "author": "Henrique Couto <email@henriquecouto.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev src/main/index.ts --transpile-only --respawn --ignore-watch node_modules",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "test": "jest --noStackTrace --runInBand",
    "test:unit": "yarn test --watch --passWithNoTests -c jest.config.js",
    "test:integration": "yarn test --watch --passWithNoTests -c jest-integration.config.js",
    "test:staged": "yarn test --findRelatedTests --silent",
    "test:ci": "yarn test --coverage --silent"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.6.4",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.2",
    "uuidv4": "^6.2.3",
    "validator": "^13.1.17"
  }
}
